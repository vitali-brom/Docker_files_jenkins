pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
    }
    stages {
        stage('create docker images and run containers') {
            steps {
                echo "=============== start build image ==============="
                dir ('/home/ubuntu/jenkins/workspace/Pipeline/') {
                    sh 'docker-compose up -d'
                    sh 'docker ps'
                }
            }
        }
    }
}